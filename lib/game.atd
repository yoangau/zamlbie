type character_type = [ Ally | Enemy ]

type entity_type = [ Player of character_type ]

type entity =
  { entity_type : entity_type;
    id : int;
    x : int;
    y : int
  }

type config =
  { view_radius_ally : int;
    view_radius_enemy : int;
    width : int;
    height : int;
    player_count : int;
    time_limit : int;
    tick_delta : float
  }

type game =
  { entities : entity list;
    config : config;
    game_id : int
  }

type move =
  [ Up
  | Down
  | Left
  | Right
  ]
